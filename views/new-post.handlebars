<link rel="stylesheet" href="/css/new-post.css">

<main>
    <section>
        <h2>Create a New Post</h2>

        <form method="POST" id="new-post-form">
            <label for="title">Title</label>
            <input type="text" name="title" id="title" placeholder="Title" required>

            <label for="content">Content</label>
            <textarea name="content" id="content" cols="30" rows="10" placeholder="Content" required></textarea>

            <button type="button" id="submit-button">Create Post</button>
        </form>
    </section>
</main>

<script src="/js/blogPost.js"></script>